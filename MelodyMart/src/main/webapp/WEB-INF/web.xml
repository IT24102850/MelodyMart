<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!-- Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Servlet Mappings for Customer Interface -->
  <servlet>
    <servlet-name>InstrumentServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.InstrumentServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InstrumentServlet</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CheckoutServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.CheckoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CheckoutServlet</servlet-name>
    <url-pattern>/checkout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrderTrackingServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.OrderTrackingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OrderTrackingServlet</servlet-name>
    <url-pattern>/trackOrder</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReviewSubmitServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.ReviewSubmitServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ReviewSubmitServlet</servlet-name>
    <url-pattern>/submitReview</url-pattern>
  </servlet-mapping>

  <!-- Servlet Mappings for Seller Portal -->
  <servlet>
    <servlet-name>ProductManagementServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.ProductManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ProductManagementServlet</servlet-name>
    <url-pattern>/manageProduct</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrderManagementServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.OrderManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OrderManagementServlet</servlet-name>
    <url-pattern>/manageOrders</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MessagingServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.MessagingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MessagingServlet</servlet-name>
    <url-pattern>/messages</url-pattern>
  </servlet-mapping>

  <!-- Servlet Mappings for System Administration -->
  <servlet>
    <servlet-name>UserManagementServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.UserManagementServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserManagementServlet</servlet-name>
    <url-pattern>/manageUsers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ModerationServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.ModerationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ModerationServlet</servlet-name>
    <url-pattern>/moderate</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ReportServlet</servlet-name>
    <servlet-class>com.melodymart.servlet.ReportServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ReportServlet</servlet-name>
    <url-pattern>/generateReport</url-pattern>
  </servlet-mapping>



  <!-- Session Configuration (Optional) -->
  <session-config>
    <session-timeout>30</session-timeout> <!-- 30 minutes -->
  </session-config>

</web-app>